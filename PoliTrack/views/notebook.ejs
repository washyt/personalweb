<link rel="stylesheet" href="../styles/css/notebook.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@1,700&family=Inconsolata:wght@700&display=swap" rel="stylesheet">

<title>Notebook</title>
<body class= "backdrop">
  <!--Profile picture-->
  <img src= '<%=userphoto%>' class="avatar" style = "border: 5px; border-style: dashed; border-radius: 200px;">
  <br><br>

  <!--Cards-->
  <% var names = Object.keys(notesdata);%>
  <% for(var i=0; i<names.length; i++) {if(notesdata[names[i]].owner== userid){%>
  <div class="card" style="width: 24rem; display: block; margin-left: auto; margin-right: auto;">
    <div class="card-body">
      <h5 class="card-title" style="text-align: center;">Your Notes</h5>

        <p class = "card-text" style = "text-align: center"> What you wrote:  <%=notesdata[names[i]].notes%> </p>
        <p class = "card-text" style = "text-align: center">When you wrote it: <%= notesdata[names[i]].date%> </p>
        <br>
        <br>
        <%}}%>
    </div>
  </div>
</body>

</html>
